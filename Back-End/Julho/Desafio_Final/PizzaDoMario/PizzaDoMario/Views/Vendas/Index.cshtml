@model IEnumerable<PizzaDoMario.Models.Venda>

@{
    ViewData["Title"] = "Pedidos da Pizza do Mario";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CadastroCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valorTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataCompra)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CadastroCliente.bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusPedido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVenda">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdVenda">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdVenda">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
